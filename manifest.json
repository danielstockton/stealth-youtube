{
  "manifest_version": 2,

  "name": "Stealth Youtube",
  "description": "Listen to Youtube videos without anyone seeing what it is.",
  "version": "0.1",
  "permissions": [
    "*://www.youtube.com/*",
    "storage",
    "tabs"
  ],
  "icons": { "128": "icon-128.png" },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "skins/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["jquery.js", "common.js", "stealth-youtube.js"],
      "css": ["skins/common/style.css",
              "skins/stackoverflow/style.css",
              "skins/spreadsheet/style.css",
              "skins/webmd/style.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
